doctype html
html(lang="en")
    head
        title #{title}
    body
        h1 #{message}

        if name && age
            h1 Data Here:
            p Name: #{name}
            p Age: #{age}

        if title === "Home Page"
            form(action="/create-post" method="POST")
                input(type="text" name="name")
                input(type="number" name="age")
                button(type="submit") Submit
